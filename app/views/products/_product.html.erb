<li class='list'>
  <%= link_to product_path(product.id) do %>
  <div class='item-img-content'>
    <%= image_tag product.image, class: "item-img" %>

    <% if product.purchase_record != nil %>
      <div class='sold-out'>
        <span>Sold Out!!</span>
      </div>
    <% end %>

  </div>
  <div class='item-info'>
    <h3 class='item-name'>
      <%= product.name %>
    </h3>
    <div class='item-price'>
      <span><%= product.price %>å††<br><%= product.delivery_charge_burden.delivery_charge_burden %></span>
      <div class='star-btn'>
        <%= image_tag "star.png", class:"star-icon" %>
        <span class='star-count'>0</span>
      </div>
    </div>
  </div>
  <% end %>
</li>